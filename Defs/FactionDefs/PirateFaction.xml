<?xml version="1.0" encoding="utf-8" ?>
<FactionDefs>

  <FactionDef>
    <defName>Buccaneers</defName>
    <label>pirate crew</label>
    <description>A Merry band of pirates.\n\nPirates don't row, they sail. And when they do they rarely fail. They enrich themselves mostly by raiding and robbing the more productive groups in the area.\n\nTheir technology level depends mostly on who they've managed to steal from recently. Mostly they carry gunpowder weapons and some may just like to stab people at close range.</description>
    <pawnsPlural>scurvy seadogs</pawnsPlural>
    <baseSelectionWeight>1</baseSelectionWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>2</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <raidCommonality>100</raidCommonality>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <appreciative>false</appreciative>
    <leaderTitle>Monarch</leaderTitle>
    <expandingIconTexture>PirateIcon</expandingIconTexture>
    <!-- <colorSpectrum>
      <li>(0.45, 0.03, 0.02)</li>
      <li>(0.8, 0.08, 0.18)</li>
      <li>(0.92, 0.62, 0.06)</li>
    </colorSpectrum> -->
    <startingGoodwill>
      <min>-100</min>
      <max>-90</max>
    </startingGoodwill>
    <mustStartOneEnemy>true</mustStartOneEnemy>
    <factionNameMaker>NamerFactionPierats</factionNameMaker>
    <baseNameMaker>NamerPersonPierats</baseNameMaker>
    <techLevel>Medieval</techLevel>
    <backstoryCategory>Raider</backstoryCategory>
    <!-- <backstoryCategory>PirateCaptain</backstoryCategory> -->
    <hairTags>
      <li>Rural</li>
      <!-- <li>Tribal</li> -->
    </hairTags>
    <naturalColonyGoodwill>
      <min>-100</min>
      <max>-80</max>
    </naturalColonyGoodwill>
    <allowedArrivalTemperatureRange>
      <min>-40</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <pawnGroupMakers>
      <li>
        <kindDef>Normal</kindDef>
        <commonality>100</commonality>
        <options>
          <PirateGunner>200</PirateGunner>
          <PirateYarhar>80</PirateYarhar>
          <PirateDuelist>100</PirateDuelist>
          <PirateSwashbuckler>100</PirateSwashbuckler>
          <PirateVoodoo>100</PirateVoodoo>
          <PirateDeckswab>200</PirateDeckswab>
        </options>
      </li>
      <li>
        <kindDef>FactionBase</kindDef>
        <options>
          <PirateGunner>200</PirateGunner>
          <PirateYarhar>150</PirateYarhar>
          <PirateDuelist>200</PirateDuelist>
          <PirateSwashbuckler>100</PirateSwashbuckler>
          <PirateVoodoo>200</PirateVoodoo>
          <PirateDeckswab>300</PirateDeckswab>
        </options>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/WorldObjects/DefaultFactionBase</homeIconPath>
  </FactionDef>
  

</FactionDefs>