        <li>UpperHead</li>
      </bodyPartGroups>
      <worngraphicPath>PieHats/Addyhat</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      
      <tags>
        <li>PirateKing</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>4</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>


