  <ThingDef ParentName="ApparelBase">
    <defName>Apparello_Cuirasso</defName>
    <label>Cuirass</label>
    <description>Ye olde metal cuirass.</description>
    <graphicData>
      <texPath>Cuirass/Cuirass</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>20000</WorkToMake>
      <Mass>4</Mass>      
      <MaxHitPoints>200</MaxHitPoints>
      <MarketValue>600</MarketValue>
      <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.08</MoveSpeed>
    </equippedStatOffsets>
    <generateCommonality>1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <worngraphicPath>Cuirass/Cuirass</worngraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      
      <tags>
        <li>PirateMate</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags> </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.4,0.6,0.6,1)</min>
          <max>RGBA(1,1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</ThingDefs>