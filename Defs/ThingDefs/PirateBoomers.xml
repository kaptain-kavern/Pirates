  <ThingDef ParentName="BaseBullet">
    <defName>Blunderbuss_Buletto</defName>
    <label>Blunderbuss shrapnel</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <DamageAmountBase>13</DamageAmountBase>
      <Speed>55</Speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanGun">
    <defName>Gunnar_Bluth</defName>
    <label>blunderbuss</label>
    <description>Blackpowder powered tube.</description>
    <graphicData>
      <texPath>PirateClashers/Blunderbuss</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractShotgun</soundInteract>
    <statBases>
      <Mass>3.4</Mass>
      <MarketValue>200</MarketValue>
      <AccuracyTouch>0.91</AccuracyTouch>
      <AccuracyShort>0.71</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>0.80</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Blunderbuss_Buletto</projectileDef>
        <warmupTime>1.3</warmupTime>
        <range>24</range>
        <soundCast>ShotShotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

